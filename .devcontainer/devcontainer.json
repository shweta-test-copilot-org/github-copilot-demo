{
    "name": "AI Native Development Lab",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true,
            "version": "latest",
            "bicepVersion": "latest"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "installDirectlyFromGitHubRelease": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers-community/npm-features/typescript:1": {
            "version": "latest"
        },
        "ghcr.io/azure/azure-dev/azd:0": {
            "version": "stable"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot",
                "github.copilot-chat",
                "ms-python.python"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "github.copilot.chat.codeGeneration.useInstructionFiles": true,
                "chat.promptFiles": true
            }
        }
    },
    // Install Python dependencies after container creation (gh copilot is built-in to Codespaces)
    "postCreateCommand": "pip install --user apm-cli && pip install -r sample-projects/contoso-orders-python/requirements.txt"
}